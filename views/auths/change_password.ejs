<%- include ('../partials/_header')  %>
<%- include ('../partials/_navbar')  %>
<div class="container"> 
    <div class="row">
        <h5 style="margin: 1em 0;">Change your Password</h5>
        <form action="" class="col s12" method="POST" action="/auth/change-password">
            <div class="row">
                <div class="input-field col s12 m6">
                <i class="material-icons prefix">accessibility</i>
                <input id="icon_prefix" type="password" name="oldP" class="validate">
                <label for="icon_prefix">Current Password</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                <i class="material-icons prefix">security</i>
                <input id="icon_prefix" type="password" name="newP" class="validate">
                <label for="icon_prefix">New Password</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                <i class="material-icons prefix">account_circle</i>
                <input id="icon_prefix" type="password" name="newP2" class="validate">
                <label for="icon_prefix">Confirm Password</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                    <button class="btn-small waves-effect waves-light" style="margin-top: 1em;" type="submit"><i class="large material-icons right">send</i>Change</button>
                </div>
            </div>    
        </form>
    </div>
</div>
<%  if( typeof errors !== 'undefined') { %>
    <% errors.forEach(e => { %>
        <script>
            M.toast({html: '<%= e %>' });
        </script>
    <% })  %> 
<% } %> 
<%- include ('../partials/_footer')  %>  