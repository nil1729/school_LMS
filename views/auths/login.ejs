<%- include ('../partials/_header')  %>

<div class="container center login-div">
    <div class="row login-row">
        <div class="col s12">
            <div class="logo">
                <img src="/images/logo.png" alt="" class="z-depth-1 responsive-img">
            </div>
            <div class="card">            
                <form action="/auth/login" method="post">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="icon_prefix" name="email" type="text" class="validate">
                        <label for="icon_prefix">Email Address</label>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">security</i>
                        <input id="icon_prefix" type="password" name="password" class="validate">
                        <label for="icon_prefix">Password</label>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Login
                        <i class="material-icons right">send</i>
                    </button>
                </form>
            </div>
            <div class="card">
                <a href="/auth/google">
                    <input type="button" class="form-control btn btn-danger" value="Sign in with Google" />
                </a>
            </div>
        </div>
    </div>
</div>

