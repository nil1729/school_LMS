<%- include ('../partials/_header')  %>
<%- include ('../partials/_navbar')  %>
<h4 class="center" style="padding: 10px 0;">CLASSES</h4>
<div class="container center" style="width: 95vw;">
    <div class="row">
        <div class="col s12 m6">
            <div class="input-field col s10">
                <i class="material-icons prefix">search</i>
                <input id="icon_prefix" type="text" class="validate search">
                <label for="icon_prefix">Search</label>
            </div>
        </div>
    </div>
    <table class="centered responsive-table highlight" style="border: 1px solid rgb(211, 208, 208);">
        <thead>
          <tr>
              <th>Class Name</th>
              <th>Room No.</th>
              <th>Teache Incharge</th>
              <th>Location</th>
              <th>No. of Students</th>
          </tr>
        </thead>
        <tbody>
            <% classes.forEach(c => { %>
            <tr class="show">
                <td class="s_filter"><%= c.className  %></td>
                <td class="s_filter"><%= c.classRoomNo  %></td>
                <td class="s_filter"><%= c.teacherInCharge  %></td>
                <td class="s_filter"><%= c.location  %></td>
                <td><%= c.students.length  %></td>
            </tr>
            <% }) %> 
        </tbody>
    </table>
</div>
<script src="/js/filterList.js"></script>
<%- include ('../partials/_footer')  %>  